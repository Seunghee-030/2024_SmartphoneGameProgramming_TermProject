<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@mipmap/drawing_canvas_crop"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:src="@mipmap/sweet_drops_title_new" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="3"
        android:rowCount="5"
        android:gravity="center"
        >

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="null"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/box_1" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="null"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/box_2"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="null"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/box_3"/>

        <!-- Add more ImageButtons for other rows/columns as needed -->

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="null"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/box_4"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="null"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/box_6"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="null"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/box_7"/>

        <!-- Add more buttons for additional levels as needed -->

    </GridLayout>

</LinearLayout>
